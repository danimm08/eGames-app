<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.egames">

    <!-- To auto-complete the email text field in the login form with the auxUser's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCOUNT_MANAGER" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.LoginActivity" />
        <activity android:name=".activities.RegisterActivity" />
        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.DetailsOfGameActivity"
            android:label="@string/title_activity_details_of_game"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.PersonalGameDetailsActivity"
            android:label="@string/title_activity_personal_game_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.SearchActivity"
            android:label="@string/title_activity_search"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.CreateExchangeActivity" />
        <activity android:name=".activities.NegotiateExchangeActivity" />
        <activity
            android:name=".activities.UserDetailsActivity"
            android:label="@string/title_activity_user_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.DetailsExchangeActivity"
            android:label="@string/title_activity_exchange_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.QualifyExchangeActivity"
            android:label="@string/title_activity_qualify_exchange"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>