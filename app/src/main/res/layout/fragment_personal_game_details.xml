<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="395dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:elevation="0dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardElevation="0dp"
    tools:context="es.egames.fragments.PersonalGameDetailsActivityFragment"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="0dp"
    tools:showIn="@layout/activity_personal_game_details">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/message_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/md_keylines"
            android:layout_marginLeft="@dimen/md_keylines"
            android:layout_marginTop="@dimen/md_keylines"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/article_subheading" />

        <RatingBar
            android:id="@+id/user_rating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/message_date"
            android:layout_marginBottom="@dimen/md_keylines"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="@dimen/md_keylines"
            android:layout_marginTop="@dimen/md_keylines"
            android:numStars="5" />

        <TextView
            android:id="@+id/card_personalgame_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_date"
            android:layout_marginBottom="@dimen/md_keylines"
            android:layout_marginLeft="@dimen/md_keylines"

            />

        <TextView
            android:id="@+id/message_sender"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_personalgame_description"

            android:layout_marginLeft="@dimen/md_keylines"

            />

        <TextView
            android:id="@+id/message_text"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_personalgame_description"
            android:layout_toEndOf="@+id/message_sender"
            android:paddingEnd="16dp"
            android:textAlignment="viewEnd" />

        <TextView
            android:id="@+id/item_exchange_their_games_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_personalgame_description"
            android:layout_marginEnd="16dp"

            android:layout_toRightOf="@+id/message_text"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/card_personalgame_distanceDescription"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_text"
            android:layout_toEndOf="@+id/message_sender"
            android:paddingEnd="16dp"
            android:textAlignment="viewEnd" />

        <TextView
            android:id="@+id/card_personalgame_distanceNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_text"
            android:layout_marginEnd="16dp"

            android:layout_toRightOf="@+id/message_text"
            android:textColor="@color/colorPrimary" />

    </RelativeLayout>
</android.support.v7.widget.CardView>

