<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:elevation="0dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/note_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="@dimen/md_keylines"
            android:layout_marginTop="@dimen/md_keylines"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="12/02/2017"
            android:textSize="@dimen/article_subheading" />

        <Button
            android:id="@+id/exchange_state"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="Pending"
            android:textColor="@android:color/holo_orange_dark" />

        <TextView
            android:id="@+id/note_date"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/note_username"

            android:layout_marginLeft="@dimen/md_keylines"

            android:text="danimoreno" />

        <TextView
            android:id="@+id/item_exchange_their_games_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/note_date"
            android:layout_marginLeft="@dimen/md_keylines"
            android:paddingEnd="16dp"
            android:text="@string/exchange_their_games"
            android:textAlignment="viewStart" />

        <TextView
            android:id="@+id/item_exchange_their_games_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/note_date"
            android:layout_marginEnd="16dp"
            android:layout_toRightOf="@+id/item_exchange_their_games_description"
            android:text="Fifa 17, Uncharted 4"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/item_exchange_my_games_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_exchange_their_games_content"
            android:layout_marginBottom="@dimen/md_keylines"
            android:layout_marginLeft="@dimen/md_keylines"
            android:paddingEnd="16dp"
            android:text="@string/exchange_my_games"
            android:textAlignment="viewStart" />

        <TextView
            android:id="@+id/item_exchange_my_games_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_exchange_their_games_content"
            android:layout_marginEnd="16dp"
            android:layout_toRightOf="@+id/item_exchange_their_games_description"
            android:text="NBA 2K 17"
            android:textColor="@color/colorPrimary" />

    </RelativeLayout>
</android.support.v7.widget.CardView>